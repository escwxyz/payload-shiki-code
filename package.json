{
  "name": "payload-shiki-code",
  "version": "0.0.0",
  "description": "A server rendered code block component powered by Shiki for Payload CMS",
  "repository": {
    "type": "git",
    "url": "https://github.com/escwxyz/payload-shiki-code.git"
  },
  "license": "MIT",
  "author": {
    "name": "Jie Wang",
    "email": "hi@jiewa.ng",
    "url": "https://github.com/escwxyz"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "import": "./dist/exports/client.js",
      "types": "./dist/exports/client.d.ts"
    },
    "./rsc": {
      "import": "./dist/exports/rsc.js",
      "types": "./dist/exports/rsc.d.ts"
    },
    "./admin": {
      "import": "./dist/exports/admin.js",
      "types": "./dist/exports/admin.d.ts"
    },
    "./utils": {
      "import": "./dist/exports/utils.js",
      "types": "./dist/exports/utils.d.ts"
    },
    "./converters": {
      "import": "./dist/exports/converters.js",
      "types": "./dist/exports/converters.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --outDir dist --rootDir ./src",
    "ci:publish": "pnpm build && pnpm changeset publish",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "dev": "next dev dev --turbo",
    "dev:generate-importmap": "pnpm dev:payload generate:importmap",
    "dev:generate-types": "pnpm dev:payload generate:types",
    "dev:payload": "cross-env PAYLOAD_CONFIG_PATH=./dev/payload.config.ts payload",
    "format": "pnpm exec biome format --write .",
    "generate:importmap": "pnpm dev:generate-importmap",
    "generate:types": "pnpm dev:generate-types",
    "test": "pnpm test:int && pnpm test:e2e",
    "test:e2e": "playwright test",
    "test:int": "vitest"
  },
  "dependencies": {
    "shiki": "^3.12.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@changesets/cli": "^2.29.7",
    "@payloadcms/db-mongodb": "3.54.0",
    "@payloadcms/next": "3.54.0",
    "@payloadcms/ui": "3.54.0",
    "@playwright/test": "^1.52.0",
    "@swc-node/register": "1.10.9",
    "@swc/cli": "0.6.0",
    "@types/hast": "^3.0.4",
    "@types/node": "^22.5.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "copyfiles": "2.4.1",
    "cross-env": "^7.0.3",
    "graphql": "^16.8.1",
    "mongodb-memory-server": "10.1.4",
    "next": "15.4.4",
    "open": "^10.1.0",
    "payload": "3.54.0",
    "qs-esm": "7.0.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.2",
    "sort-package-json": "^2.10.0",
    "typescript": "5.8.3",
    "ultracite": "5.3.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "@payloadcms/richtext-lexical": "3.54.0",
    "payload": "^3.54.0"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "registry": "https://registry.npmjs.org/"
}
